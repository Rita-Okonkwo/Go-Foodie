<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/foodieback"
    android:fitsSystemWindows="true"
    tools:context=".SignIn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/centered"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#9F19270D"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            tools:context=".SignUp">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/rumraisin"
                android:text="SIGN UP"
                android:textColor="#FDF9F6"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/rumraisin"
                android:text="Please fill out this form"
                android:textAlignment="center"
                android:textColor="#FDF9F6"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:backgroundTint="#FDF9F6"
                android:ems="10"
                android:fontFamily="@font/rumraisin"
                android:hint="First Name*"
                android:inputType="textPersonName"
                android:textColor="@android:color/background_light"
                android:textColorHighlight="#ABFF5722"
                android:textColorHint="@android:color/darker_gray" />

            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FDF9F6"
                android:ems="10"
                android:fontFamily="@font/rumraisin"
                android:hint="Last Name*"
                android:inputType="textPersonName"
                android:textColor="@android:color/background_light"
                android:textColorHighlight="#ABFF5722"
                android:textColorHint="@android:color/darker_gray" />

            <EditText
                android:id="@+id/email_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FDF9F6"
                android:ems="10"
                android:fontFamily="@font/rumraisin"
                android:hint="E-mail Address*"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/background_light"
                android:textColorHighlight="#ABFF5722"
                android:textColorHint="@android:color/darker_gray" />

            <EditText
                android:id="@+id/home_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FDF9F6"
                android:ems="10"
                android:fontFamily="@font/rumraisin"
                android:hint="Home Address*"
                android:inputType="textPersonName"
                android:textColor="@android:color/background_light"
                android:textColorHighlight="#ABFF5722"
                android:textColorHint="@android:color/darker_gray" />

            <EditText
                android:id="@+id/editText6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FDF9F6"
                android:ems="10"
                android:fontFamily="@font/rumraisin"
                android:hint="Password*"
                android:inputType="textPassword"
                android:textColor="@android:color/background_light"
                android:textColorHighlight="#ABFF5722"
                android:textColorHint="@android:color/darker_gray" />

            <Button
                android:id="@+id/signup_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/sign_up_rounded"
                android:backgroundTint="#C15B11"
                android:fontFamily="@font/rumraisin"
                android:text="SIGN UP"
                android:textColor="#FDF9F6"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:fontFamily="@font/rumraisin"
                    android:text="Already have an account?"
                    android:textAlignment="center"
                    android:textColor="#FDF9F6"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/signin_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/rumraisin"
                    android:text="Sign In"
                    android:textAlignment="textEnd"
                    android:textColor="#FDF9F6"
                    android:textSize="18sp"
                    tools:text="Sign in" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:indeterminate="true"
                android:visibility="invisible" />


        </LinearLayout>


    </LinearLayout>


</ScrollView>
