<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#19270D"
    tools:context=".SignIn">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/food_on_a_leaf" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/rumraisin"
        android:text="SIGN IN"
        android:textColor="#FDF9F6"
        android:textSize="64sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#FDF9F6"
        android:ems="10"
        android:fontFamily="@font/rumraisin"
        android:hint="E-mail Address*"
        android:inputType="textEmailAddress"
        android:textColorHint="#FDF9F6"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/password_in"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FDF9F6"
        android:ems="10"
        android:fontFamily="@font/rumraisin"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#FDF9F6"
        app:layout_constraintEnd_toEndOf="@+id/editText"
        app:layout_constraintStart_toStartOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/signin_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/sign_up_rounded"
        android:backgroundTint="#C15B11"
        android:fontFamily="@font/rumraisin"
        android:text="SIGN IN"
        android:textColor="#FDF9F6"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/password_in"
        app:layout_constraintStart_toStartOf="@+id/password_in"
        app:layout_constraintTop_toBottomOf="@+id/password_in" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/rumraisin"
        android:text="Don't have an account?"
        android:textAlignment="textStart"
        android:textColor="#FDF9F6"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/signin_btn"
        app:layout_constraintTop_toBottomOf="@+id/signin_btn" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/rumraisin"
        android:text="Sign Up"
        android:textAlignment="textEnd"
        android:textColor="#FDF9F6"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/signin_btn"
        app:layout_constraintTop_toBottomOf="@+id/signin_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>